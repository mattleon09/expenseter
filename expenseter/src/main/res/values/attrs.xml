<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="supportTintColor" format="color" />

    <declare-styleable name="Theme">
        <attr name="textColorPositive" format="color" />
        <attr name="textColorNegative" format="color" />
        <attr name="textColorNeutral" format="color" />
        <attr name="colorAccentDark" format="color" />
        <attr name="colorError" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="backgroundColorPrimary" format="color" />
        <attr name="backgroundColorPrimaryInverse" format="color" />
        <attr name="backgroundColorSecondary" format="color" />
        <attr name="actionItemColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TintImageView">
        <attr name="supportTintColor" />
    </declare-styleable>

    <declare-styleable name="TintImageButton">
        <attr name="supportTintColor" />
    </declare-styleable>

    <attr name="viewBackgroundTheme" format="enum">
        <enum name="light" value="0" />
        <enum name="dark" value="1" />
    </attr>

    <declare-styleable name="PieChartView">
        <attr name="viewBackgroundTheme" />
        <attr name="donutWidthRatio" format="float|reference" />
        <attr name="outlineWidth" format="dimension" />
        <attr name="outlineColor" format="color" />
        <attr name="inlineWidth" format="dimension" />
        <attr name="inlineColor" format="color" />
        <attr name="emptyColor" format="color" />
        <attr name="type" format="enum">
            <enum name="pie" value="0" />
            <enum name="donut" value="1" />
        </attr>
        <attr name="sizeBasedOn" format="enum">
            <enum name="none" value="0" />
            <enum name="min" value="1" />
            <enum name="width" value="2" />
            <enum name="height" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="OverviewGraphView">
        <attr name="viewBackgroundTheme" />
    </declare-styleable>

    <declare-styleable name="CategoriesReportView">
        <attr name="viewBackgroundTheme" />
    </declare-styleable>
</resources>