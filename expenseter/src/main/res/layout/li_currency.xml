<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/AdapterItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:paddingLeft="0dp"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <TextView
        android:id="@+id/codeTextView"
        style="@style/Text.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/keyline_content"
        android:paddingLeft="@dimen/keyline"
        tools:text="GBP" />

    <TextView
        android:id="@+id/formatTextView"
        style="@style/Text.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary"
        tools:text="1,000.00 Â£" />

    <TextView
        android:id="@+id/exchangeRateTextView"
        style="@style/Text.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_normal"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        tools:text="1.2489" />

</LinearLayout>